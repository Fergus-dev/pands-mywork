# defining function for menu of commands

def menu():
    user_choice = []    
    while user_choice != 'q':
        user_choice = str(input("Please choose from the following options by entering the corresponding letter:\n(a) Add new student\n(v) View students\n(q) Quit: \n"))
        print(f"You have chosen {user_choice}")

        if user_choice == 'a':
            adding()

        elif user_choice == 'v':
            viewing()

        elif user_choice == 'q':
            print("Quitting program")

        elif user_choice != 'q':
            print("Please enter either a, v, or q.")

def modules_grades():
    module_and_grade = dict(input("Please enter the student's modules and corresponding grades in the following format: 'module: grade', 'module: grade', etc.: "))

